<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
        android:layout_height="90dp"
        android:layout_width="90dp"
        android:contentDescription="image1"
        tools:src="@mipmap/ic_launcher"
        android:scaleType="centerInside"
        android:layout_marginTop="6dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="6dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:id="@+id/event_list_thumbnail"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_centerVertical="true"
        android:id="@+id/event_list_detail"
        tools:text="Detail"
        android:textSize="12sp"
        android:textColor="#000000"
        android:paddingEnd="4dp"
        android:maxLines="1"
        android:layout_marginEnd="2dp"
        android:layout_alignParentEnd="true"/>


    -<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:id="@+id/event_list_text_layout"
    android:layout_toEndOf="@id/event_list_thumbnail"
    android:layout_toStartOf="@id/event_list_detail"
    android:layout_alignBottom="@+id/event_list_thumbnail"
    android:layout_alignTop="@+id/event_list_thumbnail">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/event_list_title"
        tools:text="Title"
        android:textSize="18sp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="2dp"
        android:id="@+id/event_list_subtitle"
        tools:text="Subtitle"
        android:textSize="16sp"
        android:maxLines="3"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:ellipsize="end"
        android:layout_below="@+id/event_list_title"/>

    <TextView
        android:id="@+id/event_list_subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/event_list_subtitle"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/event_list_subtitle"
        android:layout_below="@+id/event_list_subtitle"
        android:ellipsize="end"
        android:maxLines="3"
        android:textSize="16sp"
        tools:text="Subtitle2" />

    </RelativeLayout>



</RelativeLayout>
